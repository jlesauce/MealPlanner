<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ingredientIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/ingredient"
        android:gravity="center" />

    <TextView
        android:id="@+id/ingredientName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/addIngredientToGroceryList"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@color/colorSecondary"
        android:contentDescription="@string/add_to_grocery_list"
        app:srcCompat="@drawable/grocery_list_icon_disabled" />

    <CheckBox
        android:id="@+id/addToMyIngredientsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />


</LinearLayout>